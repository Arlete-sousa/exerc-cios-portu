	funcao inicio()
	{
		escreva("digite prova 1: 		")
		leia(p1)
		escreva("digite prova 2 :       "	)
		leia(p2)
		escreva("digite prova 3:     "	)
	     leia(p3)	
		escreva("digite prova 4:     "	)
